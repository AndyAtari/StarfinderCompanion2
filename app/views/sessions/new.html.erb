<h1 align="center"> Sign In </h1>

<%= form_tag('/signin', method: :post) do %>

    <div class="form">

    <div class="break">
        <%= label_tag :email%><br>
        <%= text_field_tag :email, nil, :placeholder => 'Email'%>
    </div>
    
    <div class="break">
        <%= label_tag :password%><br>
        <%= password_field_tag :password, nil, :placeholder => 'Password' %>
    </div>
    
    <div class="break">
        <%= submit_tag("Sign In")%>
    </div>

    </div>

<%end%>

<div align="center">
<h2>New User? <%= link_to "Create Account!", new_user_path%></h2>
</div>